<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    tools:context="com.hmortimore.dinosaurquiz.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/creepster"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:text="The Dinosaur Quiz"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="38dp"
            app:fontFamily="@font/creepster" />

       <!-- <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo"/>-->

        <EditText
            android:id="@+id/playerName"
            android:layout_width="335dp"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:hint="Player Name"
            android:inputType="text"
            android:paddingLeft="28dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="15dp"
            android:text="When did dinosaurs become extinct?"
            android:textSize="20dp" />

        <RadioGroup
            android:id="@+id/q1RadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp">

            <RadioButton
                android:id="@+id/q1RadioButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="6,000 years ago"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryDark"
                android:onClick="onRadioButtonInQ1Clicked"/>

            <RadioButton
                android:id="@+id/q1RadioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="6.5 billion years ago"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryDark"
                android:onClick="onRadioButtonInQ1Clicked"/>

            <RadioButton
                android:id="@+id/q1RadioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="5 million years ago"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryDark"
                android:onClick="onRadioButtonInQ1Clicked"/>

            <RadioButton
                android:id="@+id/q1RadioButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="65 million years ago"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryDark"
                android:onClick="onRadioButtonInQ1Clicked"/>
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="What is the largest dinosaur ever discovered?"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/q2RadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp">

            <RadioButton
                android:id="@+id/q2RadioButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="Brontosaurus"
                android:textSize="16sp"
                android:onClick="onRadioButtonInQ2Clicked"/>

            <RadioButton
                android:id="@+id/q2RadioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="Tyrannosaurus Rex"
                android:textSize="16sp"
                android:onClick="onRadioButtonInQ2Clicked"/>

            <RadioButton
                android:id="@+id/q2RadioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="Giraffatitan"
                android:textSize="16sp"
                android:onClick="onRadioButtonInQ2Clicked"/>

            <RadioButton
                android:id="@+id/q2RadioButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="Argentinosaurus"
                android:textSize="16sp"
                android:onClick="onRadioButtonInQ2Clicked"/>
        </RadioGroup>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="All dinosaurs laid eggs"
            android:textSize="20dp" />

        <RadioGroup
            android:id="@+id/q3RadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/q3RadioButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="True"
                    android:textSize="16sp"
                    android:onClick="onRadioButtonInQ3Clicked"/>

                <RadioButton
                    android:id="@+id/q3RadioButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:paddingLeft="8dp"
                    android:text="False"
                    android:textSize="16sp"
                    android:onClick="onRadioButtonInQ3Clicked"/>
            </LinearLayout>
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="Which of these dinosaurs was a meat eater?"
            android:textSize="20dp" />

        <GridLayout
            android:id="@+id/q4GridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:horizontalSpacing="0dp"
            android:numColumns="2"
            android:stretchMode="columnWidth"
            android:textColor="#000000"
            android:verticalSpacing="0dp">

            <Button
                android:id="@+id/q4Image1"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:background="@drawable/stegosaurus"
                android:padding="2dp"
                android:paddingLeft="8dp"
                android:text="Stegasaurus"
                android:textColor="#000000"
                android:textSize="16sp"
                android:onClick="onRadioButtonInQ4Clicked"/>

            <Button
                android:id="@+id/q4Image2"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:background="@drawable/triceratops"
                android:padding="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Triceratops"
                android:textColor="#000000"
                android:textSize="16sp"
                android:onClick="onRadioButtonInQ4Clicked"/>
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="6dp"
            android:horizontalSpacing="0dp"
            android:numColumns="2"
            android:stretchMode="columnWidth"
            android:verticalSpacing="0dp">

            <Button
                android:id="@+id/q4Image3"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:background="@drawable/spinosaurus"
                android:padding="2dp"
                android:paddingLeft="8dp"
                android:text="Spinosaurus"
                android:textColor="#000000"
                android:textSize="16sp"
                android:onClick="onRadioButtonInQ4Clicked"/>

            <Button
                android:id="@+id/q4Image4"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:background="@drawable/apatosaurus"
                android:padding="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Apatosaurus"
                android:textColor="#000000"
                android:textSize="16sp"
                android:onClick="onRadioButtonInQ4Clicked"/>
        </GridLayout>


            <Button
                android:id="@+id/resetQuiz"
                android:layout_gravity="center_horizontal"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:padding="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="20dp"
                android:text="Reset"
                android:textColor="#000000"
                android:textSize="16sp"
                android:onClick="resetTheQuiz"/>
    </LinearLayout>
</ScrollView>